/* pages/detail/detail.wxss */
.container {
  align-items: stretch;
  padding: 0 0;
}

.detail-img {
  width: 100%;
  height: 450rpx;
}

.detail-tit-view {
  width: 100%;
  height: 150rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.detail-tit-view-tit-lab {
  padding-left: 20rpx;
  font-size: 40rpx;
  color: #696969;
}

.detail-tit-view-subtit-lab {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #A9A9A9;
}

.detail-separate-view {
  width: 100%;
  height: 15rpx;
  background-color: #F5F5F5;
}

.detail-intr-view {
  width: 100%;
  height: 600rpx;

  display: flex;
  flex-direction: column;
}

.detail-intr-view-tit-view {
  width: 100%;
  height: 80rpx;
  
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.detail-intr-view-tit-lab {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #696969;
}

.detail-intr-view-content-lab {
  width: 100% - 40rpx;
  height: 320rpx;
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  color: #696969;
}

.detail-bottom-view {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #F4A460;
}