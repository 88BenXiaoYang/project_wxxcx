/* pages/productlist/productlist.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;
}

.pro-header-view {
  width: 100%;
  height: 350rpx;
  background-color: #F4A460;

  position: fixed;
  top: 0;
}

.pro-list-view {
  background-color: #40E0D0;

  position: fixed;
  top: 350rpx;
}

.left-classify {
  position: absolute;
  left: 0;
  width: 25%;
  height: 90%;
  background-color: #F5F5F5;
}

.left-classify view {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.active {
  background-color: #ffffff;
  color: #7B68EE;
  font-size: 17px;
}

#right-content {
  position: absolute;
  right: 0;
  width: 75%;
  height: 90%;
  background-color: #ffffff;
}

.item-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}

.classify-title {
  width: 100%;
  font-size: 15px;
  font-weight: bold;
  padding-left: 10rpx;
}

.itemElement {
  width: 150rpx;
  font-size: 14px;
  margin: 15rpx;
  text-align: center;
}

.img {
  width: 140rpx;
  height: 140rpx;
}